{
  "default": {
    "server.url": {
      "$comment": ["TMO server url"],
      "$type": "string",
      "$value": "https://www.t-mobile.com?p=4&c=3"
    },
    "mytmo.server.url": {
      "$comment": ["MYTMO server url"],
      "$value": "https://my.t-mobile.com",
      "$type": "string"
    },
    "middleware.url": {
      "$comment": ["Backend MW url"],
      "$value": "https://middleware.t-mobile.com",
      "$type": "string"
    },
    "$type": "object",
    "api": {
      "$comment": ["urls used by this application"],
      "$type": "object",
      "host": {
        "$comment": ["qat data server"],
        "$type": "string",
        "$value": "https://pd01.qat.t-mobile.com:9000"
      },
      "urls": {
        "$type": "object",
        "getCatalog": {
          "$comment": ["get the phone catalog"],
          "$type": "string",
          "$value": "{{api.host}}/api/catalog?device=phone&pageSize={{size}}&pageNum={{page}}"
        },
        "getDetails": {
          "$type": "string",
          "$value": "{{api.host}}/api/product/details/{{deviceId}}"
        }
      }
    }
  },
  "environments": {
    "prod": {
      "middleware.url": {
        "$comment": ["Production middleware endpoint"],
        "$value": "https://tmo-tug.t-mobile.com",
        "$type": "string"
      },
      "$type": "object"
    },
    "dev": {
      "server.url": {
        "$comment": ["TMo dev url"],
        "$value": "https://dev.t-mobile.com",
        "$type": "string"
      },
      "$type": "object",
      "api": {
        "$type": "object",
        "host": {
          "$type": "string",
          "$value": "https://pd03.qat.t-mobile.com"
        }
      }
    },
    "$type": "object"
  }
}